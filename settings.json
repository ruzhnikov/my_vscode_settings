{
    "workbench.colorTheme": "Monokai",
    "go.formatTool": "gofmt",
    "[html]": {
        "editor.tabSize": 2
    },
    "code-runner.executorMap": {
        "perl6": "perl6"
    },
    "code-runner.executorMapByFileExtension": {
        ".pl6": "perl6",
        ".pm6": "perl6"
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            // разрешать автодополнение для строк
            // при редактировании markdown
            "strings": true
        }
    },
    "markdownlint.config": {
        // не ругаться на пробелы в конце строк
        "MD009": false
    },
    "sublimeTextKeymap.promptV3Features": true,
    "editor.fontFamily": "'Hack', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.renderWhitespace": "all",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "editor.formatOnPaste": true,
    "explorer.confirmDragAndDrop": false,
    // запрещаем автоформатирование C/C++ кода при копипасте
    // из других мест. Это в первую очередь относится к автопереносу
    // открывающих фигурных скобок и количеству пробелов в отступах в
    // функциях
    "C_Cpp.clang_format_fallbackStyle": "none"
}